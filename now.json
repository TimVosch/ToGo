{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@now/static-build",
      "config": {
        "buildCommand": "build",
        "devCommand": "watch",
        "distDir": "public"
      }
    },
    { "src": "backend/api/index.go", "use": "@now/go" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.go" },
    { "src": "/", "dest": "frontend/index.html" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {}
}
